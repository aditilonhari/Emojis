<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="tv_emoji_title">
        <item name="android:text">@string/emoji_title</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="iv_image_main">
        <item name="android:layout_margin">@dimen/grid_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:transitionName">@string/transition_name</item>
    </style>

    <style name="iv_image_details">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:transitionName">image</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
